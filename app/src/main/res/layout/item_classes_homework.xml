<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_14"
    android:background="@color/white"
    android:paddingStart="@dimen/dp_12"
    android:paddingBottom="@dimen/dp_20">

    <TextView
        android:id="@+id/tv_homework_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff1e232a"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/tv_homework"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/dp_12"
        android:ellipsize="end"
        android:lines="3"
        android:textColor="#ff8c97a7"
        android:layout_marginEnd="@dimen/dp_10"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/tv_homework_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_homework_name" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_4"
        android:src="@drawable/icon_homework"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />
</androidx.constraintlayout.widget.ConstraintLayout>