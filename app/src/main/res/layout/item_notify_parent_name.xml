<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/item_notice_parent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="#ff999999"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_notice_parent_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff11c685"
        android:textSize="10sp"
        android:layout_marginStart="5dp"
        android:background="@drawable/bg_light_green_2"
        app:layout_constraintBottom_toBottomOf="@id/item_notice_parent_tv"
        app:layout_constraintTop_toTopOf="@id/item_notice_parent_tv"
        app:layout_constraintStart_toEndOf="@id/item_notice_parent_tv"/>


    <View
        android:id="@+id/notify_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D8D8D8"
        android:visibility="invisible"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>