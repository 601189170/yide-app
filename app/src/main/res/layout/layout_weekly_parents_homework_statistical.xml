<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_20">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_50"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_12"
                android:src="@drawable/arrow_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_44"
                android:layout_marginEnd="@dimen/dp_12"
                android:background="@mipmap/icon_weekly_teacher_charge_bg"
                android:paddingStart="@dimen/dp_12"
                android:paddingTop="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_15"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作业统计"
                    android:textColor="#8CFFFFFF"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:text="50"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_event_name1"
                    app:layout_constraintEnd_toEndOf="@+id/tv_event_name1"
                    app:layout_constraintStart_toStartOf="@+id/tv_event_name1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:text="3.5"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_event_name2"
                    app:layout_constraintEnd_toEndOf="@+id/tv_event_name2"
                    app:layout_constraintStart_toStartOf="@+id/tv_event_name2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:text="30"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_event_name3"
                    app:layout_constraintEnd_toEndOf="@+id/tv_event_name3"
                    app:layout_constraintStart_toStartOf="@+id/tv_event_name3" />

                <TextView
                    android:id="@+id/tv_event_name1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="本周总作业数"
                    android:textColor="#8cffffff"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_event_name2"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_event_name2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="作业最多科目"
                    android:textColor="#8cffffff"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_event_name3"
                    app:layout_constraintStart_toEndOf="@+id/tv_event_name1" />

                <TextView
                    android:id="@+id/tv_event_name3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="作业最少科目"
                    android:textColor="#8cffffff"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_event_name2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingStart="@dimen/dp_12"
                android:paddingEnd="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_35"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提交反馈的作业数"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="（份）"
                    android:textColor="#ff909399"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView19"
                    app:layout_constraintStart_toEndOf="@+id/textView19"
                    app:layout_constraintTop_toTopOf="@+id/textView19" />

                <TextView
                    android:id="@+id/textview14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="已反馈"
                    android:textColor="#ff909399"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="@+id/textView19"
                    app:layout_constraintTop_toBottomOf="@+id/textView19" />

                <ProgressBar
                    android:id="@+id/progress"
                    style="@style/MyProgressBar2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginStart="@dimen/dp_12"
                    android:max="100"
                    android:progress="50"
                    app:layout_constraintBottom_toBottomOf="@+id/textview14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textview14"
                    app:layout_constraintTop_toTopOf="@+id/textview14" />

                <TextView
                    android:id="@+id/textview15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="未反馈"
                    android:textColor="#ff909399"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="@+id/textview14"
                    app:layout_constraintTop_toBottomOf="@+id/textview14" />

                <ProgressBar
                    android:id="@+id/progress2"
                    style="@style/MyProgressBar3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginStart="@dimen/dp_12"
                    android:max="100"
                    android:progress="50"
                    app:layout_constraintBottom_toBottomOf="@+id/textview15"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textview15"
                    app:layout_constraintTop_toTopOf="@+id/textview15" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="反馈的结果"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textview15" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="（份）"
                    android:textColor="#ff909399"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView20"
                    app:layout_constraintStart_toEndOf="@+id/textView20"
                    app:layout_constraintTop_toTopOf="@+id/textView20" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart2"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_30"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/piechart" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="0.5dp"
                    android:layout_height="80dp"
                    android:background="#EEF2F8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/piechart2" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:background="@drawable/bg_corners_blue_20"
                    app:layout_constraintBottom_toBottomOf="@+id/textView26"
                    app:layout_constraintEnd_toStartOf="@+id/textView26"
                    app:layout_constraintTop_toTopOf="@+id/textView26" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:text="很简单"
                    android:textColor="#909399"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_simple"
                    app:layout_constraintEnd_toStartOf="@+id/tv_simple"
                    app:layout_constraintTop_toTopOf="@+id/tv_simple" />

                <TextView
                    android:id="@+id/tv_simple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_40"
                    android:text="32"
                    android:textColor="#909399"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/piechart2" />

                <View
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:background="@drawable/bg_corners_green_20"
                    app:layout_constraintBottom_toBottomOf="@+id/textView22"
                    app:layout_constraintEnd_toStartOf="@+id/textView22"
                    app:layout_constraintTop_toTopOf="@+id/textView22" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:text="一般"
                    android:textColor="#ff000000"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_un_complete"
                    app:layout_constraintEnd_toStartOf="@+id/tv_un_complete"
                    app:layout_constraintTop_toTopOf="@+id/tv_un_complete" />

                <TextView
                    android:id="@+id/tv_un_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="32"
                    android:textColor="#ff000000"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_complete"
                    app:layout_constraintTop_toBottomOf="@+id/tv_complete" />


                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_40"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/view7" />

                <View
                    android:id="@+id/view7"
                    android:layout_width="0.5dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="@dimen/dp_24"
                    android:background="#EEF2F8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView20" />

                <View
                    android:id="@+id/view"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:background="@drawable/bg_corners_blue_20"
                    app:layout_constraintBottom_toBottomOf="@+id/textView23"
                    app:layout_constraintEnd_toStartOf="@+id/textView23"
                    app:layout_constraintTop_toTopOf="@+id/textView23" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:text="有难度"
                    android:textColor="#909399"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_complete"
                    app:layout_constraintEnd_toStartOf="@+id/tv_complete"
                    app:layout_constraintTop_toTopOf="@+id/tv_complete" />

                <TextView
                    android:id="@+id/tv_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_40"
                    android:text="32"
                    android:textColor="#ff000000"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/piechart" />

                <View
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:background="@drawable/bg_corners_green_20"
                    app:layout_constraintBottom_toBottomOf="@+id/textView25"
                    app:layout_constraintEnd_toStartOf="@+id/textView25"
                    app:layout_constraintTop_toTopOf="@+id/textView25" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:text="已完成"
                    android:textColor="#909399"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_general"
                    app:layout_constraintEnd_toStartOf="@+id/tv_general"
                    app:layout_constraintTop_toTopOf="@+id/tv_general" />

                <TextView
                    android:id="@+id/tv_general"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="32"
                    android:textColor="#ff000000"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_simple"
                    app:layout_constraintTop_toBottomOf="@+id/tv_simple" />

                <View
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:background="@drawable/bg_corners_gray_week_22"
                    app:layout_constraintBottom_toBottomOf="@+id/textView27"
                    app:layout_constraintEnd_toStartOf="@+id/textView27"
                    app:layout_constraintTop_toTopOf="@+id/textView27" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:text="已完成"
                    android:textColor="#909399"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_have_difficulty"
                    app:layout_constraintEnd_toStartOf="@+id/tv_have_difficulty"
                    app:layout_constraintTop_toTopOf="@+id/tv_have_difficulty" />

                <TextView
                    android:id="@+id/tv_have_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="32"
                    android:textColor="#ff000000"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_simple"
                    app:layout_constraintTop_toBottomOf="@+id/tv_general" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:background="@mipmap/icon_weekly_tag"
        android:gravity="center"
        android:text="作业统计"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>