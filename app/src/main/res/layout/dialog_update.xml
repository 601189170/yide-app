<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        android:background="@drawable/bg_white6"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_update" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:text="发现新版本"
            android:textColor="@color/text_1E1E1E"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="16dp"
            android:lineSpacingExtra="6dp"
            android:scrollbars="vertical"
            android:text="版本更新啦！优化使用体验后， 更多精彩等你发现"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/text_16" />

        <com.yyide.chatim.widget.LoadingButton
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/dp_16"
            android:gravity="center"
            app:background="@drawable/bg_corners_blue_20"
            app:progressColor="@android:color/white"
            app:text="立即升级"
            app:textColor="@color/white"
            app:textSize="16sp" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="稍后再说"
            android:textColor="#ff666666"
            android:textSize="16sp" />

    </LinearLayout>
</RelativeLayout>