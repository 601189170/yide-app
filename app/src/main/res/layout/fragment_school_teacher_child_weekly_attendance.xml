<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F8FC">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_50"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_12"
                    android:paddingEnd="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_10">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="全校教职工每天出入校考勤率"
                        android:textColor="#ff1e1e1e"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <include
                        android:id="@+id/layout_charts"
                        layout="@layout/layout_weekly_charts_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        app:layout_constraintTop_toBottomOf="@+id/textView" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_50"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/dp_12"
                    android:paddingEnd="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_10">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="教职工各部门出入校考勤率"
                        android:textColor="#ff1e1e1e"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view8"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@color/colorAccent"
                        app:layout_constraintStart_toStartOf="@+id/textView2"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_6"
                        android:text="本周"
                        android:textColor="#ff303133"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="@+id/view8"
                        app:layout_constraintStart_toEndOf="@+id/view8"
                        app:layout_constraintTop_toTopOf="@+id/view8" />

                    <View
                        android:id="@+id/view10"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="@dimen/dp_16"
                        android:background="#67D4A9"
                        app:layout_constraintBottom_toBottomOf="@+id/textView21"
                        app:layout_constraintStart_toEndOf="@+id/textView21"
                        app:layout_constraintTop_toTopOf="@+id/textView21" />

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_6"
                        android:text="本周"
                        android:textColor="#ff303133"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="@+id/view10"
                        app:layout_constraintStart_toEndOf="@+id/view10"
                        app:layout_constraintTop_toTopOf="@+id/view10" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        app:layout_constraintTop_toBottomOf="@+id/textView28">

                        <View
                            android:id="@+id/view1"
                            android:layout_width="0.5dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="@dimen/dp_44"
                            android:background="#26000000"
                            app:layout_constraintBottom_toBottomOf="@+id/recyclerviewDept"
                            app:layout_constraintHorizontal_chainStyle="spread_inside"
                            app:layout_constraintStart_toStartOf="@+id/recyclerviewDept"
                            app:layout_constraintTop_toTopOf="@+id/recyclerviewDept" />

                        <View
                            android:id="@+id/view2"
                            android:layout_width="0.5dp"
                            android:layout_height="0dp"
                            android:background="#26000000"
                            app:layout_constraintBottom_toBottomOf="@+id/recyclerviewDept"
                            app:layout_constraintEnd_toStartOf="@+id/view1"
                            app:layout_constraintStart_toEndOf="@+id/view3"
                            app:layout_constraintTop_toTopOf="@+id/recyclerviewDept" />

                        <View
                            android:id="@+id/view3"
                            android:layout_width="0.5dp"
                            android:layout_height="0dp"
                            android:background="#26000000"
                            app:layout_constraintBottom_toBottomOf="@+id/recyclerviewDept"
                            app:layout_constraintEnd_toEndOf="@+id/view6"
                            app:layout_constraintEnd_toStartOf="@+id/view4"
                            app:layout_constraintStart_toEndOf="@+id/view2"
                            app:layout_constraintTop_toTopOf="@+id/recyclerviewDept" />

                        <View
                            android:id="@+id/view4"
                            android:layout_width="0.5dp"
                            android:layout_height="0dp"
                            android:background="#26000000"
                            app:layout_constraintBottom_toBottomOf="@+id/recyclerviewDept"
                            app:layout_constraintEnd_toStartOf="@+id/view5"
                            app:layout_constraintStart_toEndOf="@+id/view3"
                            app:layout_constraintTop_toTopOf="@+id/recyclerviewDept" />

                        <View
                            android:id="@+id/view5"
                            android:layout_width="0.5dp"
                            android:layout_height="0dp"
                            android:background="#26000000"
                            app:layout_constraintBottom_toBottomOf="@+id/recyclerviewDept"
                            app:layout_constraintEnd_toStartOf="@+id/view6"
                            app:layout_constraintStart_toEndOf="@+id/view4"
                            app:layout_constraintTop_toTopOf="@+id/recyclerviewDept" />

                        <View
                            android:id="@+id/view6"
                            android:layout_width="0.5dp"
                            android:layout_height="0dp"
                            android:background="#26000000"
                            app:layout_constraintBottom_toBottomOf="@+id/recyclerviewDept"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/recyclerviewDept" />

                        <TextView
                            android:id="@+id/tv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="0%"
                            android:textColor="#ff909399"
                            android:textSize="11sp"
                            app:layout_constraintEnd_toEndOf="@+id/view1"
                            app:layout_constraintStart_toStartOf="@+id/view1"
                            app:layout_constraintTop_toBottomOf="@+id/recyclerviewDept" />

                        <TextView
                            android:id="@+id/tv_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="20%"
                            android:textColor="#ff909399"
                            android:textSize="11sp"
                            app:layout_constraintEnd_toEndOf="@+id/view2"
                            app:layout_constraintStart_toStartOf="@+id/view2"
                            app:layout_constraintTop_toBottomOf="@+id/recyclerviewDept" />

                        <TextView
                            android:id="@+id/tv_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="40%"
                            android:textColor="#ff909399"
                            android:textSize="11sp"
                            app:layout_constraintEnd_toEndOf="@+id/view3"
                            app:layout_constraintStart_toStartOf="@+id/view3"
                            app:layout_constraintTop_toBottomOf="@+id/recyclerviewDept" />

                        <TextView
                            android:id="@+id/tv_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="60%"
                            android:textColor="#ff909399"
                            android:textSize="11sp"
                            app:layout_constraintEnd_toEndOf="@+id/view4"
                            app:layout_constraintStart_toStartOf="@+id/view4"
                            app:layout_constraintTop_toBottomOf="@+id/recyclerviewDept" />

                        <TextView
                            android:id="@+id/tv_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="80%"
                            android:textColor="#ff909399"
                            android:textSize="11sp"
                            app:layout_constraintEnd_toEndOf="@+id/view5"
                            app:layout_constraintStart_toStartOf="@+id/view5"
                            app:layout_constraintTop_toBottomOf="@+id/recyclerviewDept" />

                        <TextView
                            android:id="@+id/tv_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="100%"
                            android:textColor="#ff909399"
                            android:textSize="11sp"
                            app:layout_constraintEnd_toEndOf="@+id/view6"
                            app:layout_constraintTop_toBottomOf="@+id/recyclerviewDept" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerviewDept"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            app:layout_constraintEnd_toStartOf="@+id/view6"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:itemCount="4"
                            tools:listitem="@layout/item_weekly_progress_h" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>