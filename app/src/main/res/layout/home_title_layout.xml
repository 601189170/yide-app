<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/user_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp">

            <com.yyide.chatim.widget.RadiusImageView
                android:id="@+id/head_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/default_head"
                android:scaleType="centerCrop"
                app:left_bottom_radius="6dp"
                app:right_bottom_radius="6dp"
                app:right_top_radius="6dp"
                app:left_top_radius="6dp"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@drawable/corners4"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#222222"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/scan"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="12dp"
            android:background="@drawable/scan" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_message"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFF0F0">

        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11dp"
            android:background="@drawable/bg_gradite"
            android:gravity="center"
            android:text="待办"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <com.paradoxie.autoscrolltextview.VerticalTextview
            android:id="@+id/spmsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="45dp"
            android:gravity="center"
            android:textColor="#1F2833"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_todo"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="14dp"
            android:background="@drawable/bg_gradite2"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:visibility="invisible" />
    </FrameLayout>

</LinearLayout>
