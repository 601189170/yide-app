<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <FrameLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp" >


        <FrameLayout
            android:background="@drawable/corners4"
            android:id="@+id/user_img"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="12dp"
            android:layout_width="30dp"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </FrameLayout>

        <TextView
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="#222222"
            android:textStyle="bold"
            android:id="@+id/school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="12dp"
            android:background="@drawable/scan"
            android:id="@+id/scan"
            android:layout_gravity="right|center_vertical"
            android:layout_width="21dp"
            android:layout_height="21dp" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/layout_message"
        android:background="#FFF0F0"
        android:layout_width="match_parent"
        android:layout_height="45dp" >

        <TextView
            android:text="待办"
            android:layout_marginLeft="11dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:background="@drawable/bg_gradite"
            android:layout_width="40dp"
            android:layout_height="21dp" />

        <com.paradoxie.autoscrolltextview.VerticalTextview
            android:text="罗小黑的主监护人提交的请假需要你审批"
            android:id="@+id/spmsg"
            android:textSize="14sp"
            android:textColor="#1F2833"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="45dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/white"
            android:textSize="9sp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="14dp"
            android:background="@drawable/bg_gradite2"
            android:layout_width="15dp"
            android:layout_height="15dp" />
    </FrameLayout>

</LinearLayout>
