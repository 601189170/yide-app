<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_home_top_bg"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent">

        <org.raphets.roundimageview.RoundImageView
            android:id="@+id/head_img"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:src="@drawable/default_head"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:left_bottom_radius="6dp"
            app:left_top_radius="6dp"
            app:right_bottom_radius="6dp"
            app:right_top_radius="6dp" />

        <TextView
            android:id="@+id/school_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_17"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/head_img"
            app:layout_constraintEnd_toStartOf="@+id/scan"
            app:layout_constraintStart_toEndOf="@+id/head_img"
            app:layout_constraintTop_toTopOf="@+id/head_img" />

        <ImageView
            android:id="@+id/scan"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginRight="12dp"
            android:background="@mipmap/scan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/notifyContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <com.youth.banner.Banner
        android:id="@+id/homeBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintTop_toBottomOf="@+id/homeBanner">

        <TextView
            android:id="@+id/tvMenu1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_4"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="云食堂"
            android:textColor="#ff666666"
            android:textSize="13sp"
            app:drawableTopCompat="@mipmap/icon_home_menu1"
            app:layout_constraintEnd_toStartOf="@+id/tvMenu2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMenu2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_4"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="学生成绩"
            android:textColor="#ff666666"
            android:textSize="13sp"
            app:drawableTopCompat="@mipmap/icon_home_menu2"
            app:layout_constraintEnd_toStartOf="@+id/tvMenu3"
            app:layout_constraintStart_toEndOf="@+id/tvMenu1"
            app:layout_constraintTop_toTopOf="@+id/tvMenu1" />

        <TextView
            android:id="@+id/tvMenu3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_4"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="会议"
            android:textColor="#ff666666"
            android:textSize="13sp"
            app:drawableTopCompat="@mipmap/icon_home_menu3"
            app:layout_constraintEnd_toStartOf="@+id/tvMenu4"
            app:layout_constraintStart_toEndOf="@+id/tvMenu2"
            app:layout_constraintTop_toTopOf="@+id/tvMenu2" />

        <TextView
            android:id="@+id/tvMenu4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_4"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="网络教研"
            android:textColor="#ff666666"
            android:textSize="13sp"
            app:drawableTopCompat="@mipmap/icon_home_menu4"
            app:layout_constraintEnd_toStartOf="@+id/tvMenu5"
            app:layout_constraintStart_toEndOf="@+id/tvMenu3"
            app:layout_constraintTop_toTopOf="@+id/tvMenu3" />

        <TextView
            android:id="@+id/tvMenu5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_4"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="周报"
            android:textColor="#ff666666"
            android:textSize="13sp"
            app:drawableTopCompat="@mipmap/icon_home_menu5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvMenu4"
            app:layout_constraintTop_toTopOf="@+id/tvMenu4" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
