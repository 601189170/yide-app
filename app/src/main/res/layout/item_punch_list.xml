<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingHorizontal="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_item_punch_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="签到未打卡"
        android:textColor="#ff333333"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_item_punch_circle_logo"/>

    <TextView
        android:id="@+id/tv_item_punch_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white2"
        android:text="未打卡"
        android:paddingHorizontal="5dp"
        android:paddingVertical="2dp"
        android:layout_marginStart="5dp"
        android:textColor="#ff333333"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/tv_item_punch_title"
        app:layout_constraintTop_toTopOf="@id/tv_item_punch_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_punch_title"/>

    <TextView
        android:id="@+id/tv_item_punch_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff666666"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_item_punch_title"
        app:layout_constraintStart_toStartOf="@id/tv_item_punch_title"
        app:drawableStartCompat="@mipmap/address_logo" />


    <View
        android:id="@+id/line_top"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#B3B3B3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_item_punch_circle_logo"
        app:layout_constraintStart_toStartOf="@id/iv_item_punch_circle_logo"
        app:layout_constraintEnd_toEndOf="@id/iv_item_punch_circle_logo"/>


    <ImageView
        android:id="@+id/iv_item_punch_circle_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_gray_bg"
        app:layout_constraintTop_toTopOf="@id/tv_item_punch_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_punch_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/line_bottom"
        android:layout_width="1dp"
        android:layout_height="45dp"
        android:background="#B3B3B3"
        app:layout_constraintTop_toBottomOf="@id/iv_item_punch_circle_logo"
        app:layout_constraintStart_toStartOf="@id/iv_item_punch_circle_logo"
        app:layout_constraintEnd_toEndOf="@id/iv_item_punch_circle_logo"/>




</androidx.constraintlayout.widget.ConstraintLayout>