<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="276dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/add_schedule_input_box_bg_shape">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:text="添加标签"
        android:textColor="#ff1e1e1e"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_close"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_14"
        android:background="@drawable/schedule_add_label_close_dialog_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_marginTop="64dp"
        android:background="#F7F7F7"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_label_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/v_line"
        app:layout_constraintBottom_toTopOf="@id/tv_add"
        tools:listitem="@layout/item_dialog_add_label"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_20"
        />
    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新建标签"
        android:textColor="#ff2c8aff"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableStart="@drawable/schedule_add_label_icon"
        android:drawablePadding="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginBottom="22dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>