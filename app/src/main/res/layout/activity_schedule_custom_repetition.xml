<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <include
        android:id="@+id/top"
        layout="@layout/title_layout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/top">
        <com.yyide.chatim.widget.WheelView
            android:id="@+id/each_wv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:itemNumber="3"
            app:lineColorWv="#F7F9FA"
            app:lineHeight="1.5dp"
            app:maskHeight="48dp"
            app:noEmpty="true"
            app:normalTextColor="#333333"
            app:normalTextSize="@dimen/text_16"
            app:selectedTextColor="#2C8AFF"
            app:selectedTextSize="18sp"
            app:unitHeight="50dp"
            />
        <com.yyide.chatim.widget.WheelView
            android:id="@+id/number_wv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:itemNumber="3"
            app:lineColorWv="#F7F9FA"
            app:lineHeight="1.5dp"
            app:maskHeight="48dp"
            app:noEmpty="true"
            app:normalTextColor="#333333"
            app:normalTextSize="@dimen/text_16"
            app:selectedTextColor="#2C8AFF"
            app:selectedTextSize="18sp"
            app:unitHeight="50dp"
            />
        <com.yyide.chatim.widget.WheelView
            android:id="@+id/unit_wv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:itemNumber="3"
            app:lineColorWv="#F7F9FA"
            app:lineHeight="1.5dp"
            app:maskHeight="48dp"
            app:noEmpty="true"
            app:normalTextColor="#333333"
            app:normalTextSize="@dimen/text_16"
            app:selectedTextColor="#2C8AFF"
            app:selectedTextSize="18sp"
            app:unitHeight="50dp"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_week_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_dialog_week_custom_repetition"
        tools:itemCount="3"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:visibility="gone"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_month_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_dialog_week_custom_repetition"
        tools:itemCount="7"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>