<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_hint_dialog"
    android:background="@drawable/dialog_bg_shape">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_circle_topcorner_white_bg">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:text="消息提示"
            android:textColor="#222222"
            android:visibility="visible"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_hintText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/dp_12"
            android:paddingStart="72dp"
            android:paddingEnd="72dp"
            android:textSize="@dimen/text_16"
            android:text="删除通知公告并将其他相关信息一并删除"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:background="@drawable/shape_circle_leftbottemcorner_white_bg"
            android:text="取消"
            android:textColor="#00A0E9"
            android:textSize="@dimen/dp_20" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_ensure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:text="删除"
            android:background="@drawable/shape_circle_rightbottemcorner_purple_bg"
            android:textColor="#00A0E9"
            android:textSize="@dimen/text_20" />

    </LinearLayout>

</LinearLayout>