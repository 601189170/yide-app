<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FA">

    <include
        android:id="@+id/top"
        layout="@layout/title_layout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:layout_marginTop="44dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F7F9FA"
            tools:context=".activity.schedule.ScheduleEditActivity">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_schedule_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:text="标题"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/tv_bt"
                    android:textColor="@color/text_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">

                </TextView>
                <LinearLayout

                    app:layout_constraintTop_toBottomOf="@+id/tv_bt"
                    android:id="@+id/top_layout"
                    android:background="@drawable/bg_edit_bgrc"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    tools:ignore="MissingConstraints">



                <ImageView

                    android:id="@+id/iv_schedule_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:src="@drawable/icon_xq_rc"
                    app:layout_constraintTop_toTopOf="parent"

                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/et_schedule_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_6"
                    android:background="@color/white"
                    android:hint="需要输入日程名称"
                    android:maxEms="20"
                    android:singleLine="true"
                    android:paddingEnd="90dp"
                    android:text="语文初三10班"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold"
                    />
                </LinearLayout>
                <TextView
                    android:text="备注"
                    app:layout_constraintTop_toBottomOf="@+id/top_layout"
                    android:id="@+id/tv_bt2"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/text_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">

                </TextView>
                <LinearLayout

                    app:layout_constraintTop_toBottomOf="@+id/tv_bt2"
                    android:id="@+id/top2_layout"
                    android:background="@drawable/bg_edit_bgrc"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    tools:ignore="MissingConstraints">





                    <EditText
                        android:id="@+id/edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_6"
                        android:background="@color/white"
                        android:hint="需要输入日程名称"
                        android:maxEms="20"
                        android:singleLine="true"
                        android:paddingEnd="90dp"
                        android:text="这里是备注的内容"
                        android:textColor="#333333"
                        android:textSize="@dimen/text_14"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottom_layout"
                android:padding="15dp"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@+id/cl_schedule_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
               >

                <TextView
                    android:text="全天"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/tv_bt3"
                    android:textSize="14sp"
                    android:textColor="@color/text_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">

                </TextView>

                <TextView
                    android:id="@+id/checkBox"
                    app:layout_constraintLeft_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">

                </TextView>
                <TextView
                    android:id="@+id/line"
                    android:layout_marginTop="@dimen/dp_15"
                    app:layout_constraintTop_toBottomOf="@+id/tv_bt3"
                    android:background="#D8D8D8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    tools:ignore="MissingConstraints">

                </TextView>

                <TextView
                    android:text="时间"
                    app:layout_constraintTop_toBottomOf="@+id/line"
                    android:id="@+id/tv_bt4"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/text_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">

                </TextView>
                <LinearLayout
                    app:layout_constraintTop_toBottomOf="@+id/tv_bt4"
                    android:id="@+id/top3_layout"
                    android:background="@drawable/bg_edit_bgrc"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    tools:ignore="MissingConstraints">





                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_6"
                        android:background="@drawable/bg_edit_bgrc"
                        android:hint="需要输入日程名称"
                        android:maxEms="20"
                        android:singleLine="true"

                        android:text="111"
                        android:textColor="#333333"
                        android:textSize="@dimen/text_14"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:text="至"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_6"
                        android:background="@drawable/bg_edit_bgrc"
                        android:hint="需要输入日程名称"
                        android:maxEms="20"
                        android:singleLine="true"

                        android:text="111"
                        android:textColor="#333333"
                        android:textSize="@dimen/text_14"
                        android:textStyle="bold"
                        />
                </LinearLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>

 <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/zj_layout"
                android:padding="15dp"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
               >
     <TextView
         android:text="日程开始时"
         app:layout_constraintTop_toTopOf="parent"
         android:id="@+id/tv_bt5"
         android:drawableStart="@drawable/icon_rc_tx2"
         android:textSize="14sp"
         android:textColor="@color/text_666666"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         tools:ignore="MissingConstraints">

     </TextView>

     <ImageView
         app:layout_constraintLeft_toRightOf="parent"
         android:src="@drawable/icon_rc_right"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         tools:ignore="MissingConstraints">

     </ImageView>

 </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cyr_layout"
                android:padding="15dp"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@+id/zj_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >
                <TextView
                    android:text="参与人"
                    android:id="@+id/tv_bt6"
                    android:drawableStart="@drawable/icon_rc_tx2"
                    android:textSize="14sp"
                    android:textColor="@color/text_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">

                </TextView>
                <LinearLayout

                    app:layout_constraintTop_toBottomOf="@+id/tv_bt6"
                    android:id="@+id/top6_layout"
                    android:background="@drawable/bg_edit_bgrc"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    tools:ignore="MissingConstraints">


                    <EditText
                        android:id="@+id/tv_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_6"
                        android:background="@color/white"
                        android:hint="需要输入日程名称"
                        android:maxEms="20"
                        android:singleLine="true"
                        android:text="1233"
                        android:textColor="#333333"
                        android:textSize="@dimen/text_14"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:text="地点"
                    app:layout_constraintTop_toBottomOf="@id/top6_layout"
                    android:id="@+id/tv_bt7"
                    android:drawableStart="@drawable/icon_rc_tx2"
                    android:textSize="14sp"
                    android:textColor="@color/text_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">

                </TextView>
                <LinearLayout

                    app:layout_constraintTop_toBottomOf="@+id/tv_bt7"
                    android:id="@+id/top7_layout"
                    android:background="@drawable/bg_edit_bgrc"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    tools:ignore="MissingConstraints">





                    <EditText
                        android:id="@+id/tv_adress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_6"
                        android:background="@color/white"
                        android:hint="需要输入日程名称"
                        android:maxEms="20"
                        android:singleLine="true"
                        android:text="999999"
                        android:textColor="#333333"
                        android:textSize="@dimen/text_14"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/boottom_layout"
                android:padding="15dp"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@+id/cyr_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                tools:ignore="NotSibling">
                <TextView
                    android:text="标签"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/tv_bt9"
                    android:textSize="14sp"
                    android:textColor="@color/text_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">

                </TextView>

                <ImageView
                    android:src="@drawable/icon_rc_add"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">

                </ImageView>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_bt9"
                    android:id="@+id/rc_bq"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">

                </androidx.recyclerview.widget.RecyclerView>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>