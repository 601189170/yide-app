<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_leave_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_6"
        android:ellipsize="end"
        android:ems="4"
        android:lines="1"
        android:textColor="@color/text_1E1E1E"
        android:textSize="@dimen/text_15"
        app:layout_constraintEnd_toStartOf="@+id/tv_leave_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_leave_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_10"
        android:textColor="#ff1e1e1e"
        android:textSize="@dimen/text_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_leave_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:textColor="#ff606266"
        android:textSize="@dimen/text_13"
        app:layout_constraintStart_toStartOf="@+id/tv_leave_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_leave_name" />

    <TextView
        android:id="@+id/tv_leave_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="#F6BD16"
        android:textSize="@dimen/text_13"
        app:layout_constraintStart_toEndOf="@+id/tv_leave_event"
        app:layout_constraintTop_toTopOf="@+id/tv_leave_event" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#ffeef2f8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_leave_time" />
</androidx.constraintlayout.widget.ConstraintLayout>