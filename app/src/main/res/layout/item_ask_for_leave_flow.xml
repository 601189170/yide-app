<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/v_dot"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:background="@drawable/black12_dot_shape"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="23.5dp"/>
    <View
        android:id="@+id/v_line1"
        android:layout_width="0.5dp"
        android:layout_height="36dp"
        android:background="#DCDFE6"
        app:layout_constraintLeft_toLeftOf="@id/v_dot"
        app:layout_constraintRight_toRightOf="@id/v_dot"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/v_line2"
        android:layout_width="0.5dp"
        android:layout_height="36dp"
        android:background="#DCDFE6"
        app:layout_constraintLeft_toLeftOf="@id/v_dot"
        app:layout_constraintRight_toRightOf="@id/v_dot"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_flow_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/v_dot"
        app:layout_constraintRight_toRightOf="@id/v_dot"
        android:src="@drawable/icon_flow_checked"
        android:visibility="visible"
        />
    <TextView
        android:id="@+id/tv_time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff333333"
        android:textSize="@dimen/text_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="54dp"
        />
    <TextView
        android:id="@+id/tv_date_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff999999"
        android:textSize="@dimen/text_12"
        app:layout_constraintLeft_toLeftOf="@id/tv_time_start"
        app:layout_constraintTop_toBottomOf="@id/tv_time_start"/>
    <ImageView
        android:id="@+id/iv_user_head"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/default_head"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="54dp"
        />
    <TextView
        android:id="@+id/tv_flow_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launch_application"
        android:textColor="#ff333333"
        android:textSize="@dimen/text_14"
        app:layout_constraintLeft_toRightOf="@id/iv_user_head"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_12"
        />
    <TextView
        android:id="@+id/tv_flow_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:maxEms="10"
        android:singleLine="true"
        android:textColor="#ff999999"
        android:textSize="@dimen/text_14"
        app:layout_constraintLeft_toLeftOf="@id/tv_flow_title"
        app:layout_constraintTop_toBottomOf="@id/tv_flow_title"
        />
    <View
        android:id="@+id/v_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DCDFE6"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="54dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>