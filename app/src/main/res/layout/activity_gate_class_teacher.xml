<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/top"
        layout="@layout/title_layout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_gate_base_detail"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:background="#FFF5F8FC"
        app:layout_constraintTop_toBottomOf="@id/top">

        <TextView
            android:id="@+id/tv_date_pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:drawableEnd="@drawable/icon_arrow_down"
            android:drawablePadding="@dimen/dp_12"
            android:text="2021/12/01"
            android:textColor="#ff1e1e1e"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_class_pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_12"
            android:drawableEnd="@drawable/icon_arrow_down"
            android:drawablePadding="@dimen/dp_12"
            android:text="一年级1班"
            android:textColor="#ff1e1e1e"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@drawable/gate_top_bg"
            app:layout_constraintTop_toBottomOf="@id/tv_date_pick">

            <TextView
                android:id="@+id/tv_gate_event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:text="一年级1班学生出入校门口情况"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（人）"
                android:textColor="#B3FFFFFF"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_gate_event_title"
                app:layout_constraintLeft_toRightOf="@id/tv_gate_event_title" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.33" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.66" />

            <View
                android:id="@+id/v_line1"
                android:layout_width="1dp"
                android:layout_height="@dimen/dp_30"
                android:layout_marginBottom="23dp"
                android:background="#21EEF4FC"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/guideline1" />

            <View
                android:id="@+id/v_line2"
                android:layout_width="1dp"
                android:layout_height="@dimen/dp_30"
                android:layout_marginBottom="23dp"
                android:background="#21EEF4FC"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/guideline2" />

            <TextView
                android:id="@+id/tv_through_number_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_18"
                android:text="通行人数"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guideline1" />

            <TextView
                android:id="@+id/tv_through_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="60"
                android:textColor="#DBFFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_through_number_title"
                app:layout_constraintLeft_toLeftOf="@id/tv_through_number_title"
                app:layout_constraintRight_toRightOf="@id/tv_through_number_title" />

            <TextView
                android:id="@+id/tv_go_out_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_18"
                android:text="出校"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/guideline1"
                app:layout_constraintRight_toLeftOf="@id/guideline2" />

            <TextView
                android:id="@+id/tv_go_out_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="60"
                android:textColor="#DBFFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_go_out_title"
                app:layout_constraintLeft_toLeftOf="@id/tv_go_out_title"
                app:layout_constraintRight_toRightOf="@id/tv_go_out_title" />

            <TextView
                android:id="@+id/tv_go_into_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_18"
                android:text="入校"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/guideline2"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv_go_into_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="60"
                android:textColor="#DBFFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_go_into_title"
                app:layout_constraintLeft_toLeftOf="@id/tv_go_into_title"
                app:layout_constraintRight_toRightOf="@id/tv_go_into_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/slidingTabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/cl_gate_base_detail"
        app:tl_indicator_color="@color/colorPrimary"
        app:tl_indicator_height="3dp"
        app:tl_indicator_width="@dimen/dp_50"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="#2C8AFF"
        app:tl_textUnselectColor="#909399"
        app:tl_textsize="@dimen/text_14" />
    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E4E7ED"
        app:layout_constraintTop_toBottomOf="@id/slidingTabLayout"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_line" />
</androidx.constraintlayout.widget.ConstraintLayout>