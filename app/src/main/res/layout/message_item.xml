<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        android:textColor="#C0C4CC"
        android:text="12-12-12"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/bg_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp">


            <TextView

                android:background="@drawable/icon_leave"
                android:layout_gravity="center_vertical"
                android:layout_width="26dp"
                android:layout_height="26dp" />
            <TextView
                android:text="请假"
                android:textStyle="bold"
                android:textColor="#303133"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView

            android:background="@color/line_10"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:text="请假审批提醒"
            android:textStyle="bold"
            android:textColor="#303133"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#606266"
            android:textSize="13sp"
            android:text="邓小方的主监护人提交的请假需要你审批"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请假类型：事假"
            android:textColor="#606266"
            android:textSize="12sp"
            />
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间：2021-01-10 09:00"
            android:textColor="#606266"
            android:textSize="12sp"
            />
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间：2021-01-10 18:00"
            android:textColor="#606266"
            android:textSize="12sp"
            />
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审批状态：待审批"
            android:textColor="#606266"
            android:textSize="12sp"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_gravity="right"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <TextView
            android:text="拒绝"
            android:textSize="14sp"
            android:textColor="#303133"
            android:gravity="center"
            android:background="@drawable/bg_corners_gray_18"
            android:layout_width="75dp"
            android:layout_height="35dp" />
        <TextView
            android:text="同意"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/bg_corners_blue_18"
            android:layout_width="75dp"
            android:layout_height="35dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>


</LinearLayout>
